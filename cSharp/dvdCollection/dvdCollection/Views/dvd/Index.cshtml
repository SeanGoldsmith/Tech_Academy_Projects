@model IEnumerable<dvdCollection.Models.dvd>

@{
    ViewBag.Title = "Index";
}

<h2>My Dvd Collection</h2>

<p>
    @Html.ActionLink("Create New DVD", "Create")
</p>
<br><br />
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.dvdTitle)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.dvdDirector)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.genre)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.dvdTitle)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.dvdDirector)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.genre)
        </td>
       

        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.dvdId }) |
            @Html.ActionLink("Details", "Details", new { id=item.dvdId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.dvdId })
        </td>
    </tr>
}

</table>
